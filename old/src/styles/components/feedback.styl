.feedback
    background: $green
    overflow: hidden
    margin-top: 48px

.feedback-form
    width: 100%
    // margin: 16px 0

.feedback-form__container
    border: none
    padding: 16px 16px 36px

.feedback-form__field
    border: none
    background: none //#fff
    outline: none
    padding: 16px 16px 16px 0
    margin-bottom: 4px
    width: 100%
    font-size: 1em
    border-bottom: 1px dotted #333
    color: #333
    transition: background 250ms ease-in-out
    
.feedback__annotation
    text-align: center
    color: #333

.feedback-form__button
    border: none
    outline: none
    background: $orange
    padding: 16px
    margin: 16px 0 32px
    color: #333
    font-size: 1em
    width: 100%
    cursor: pointer
    transition: all 250ms ease-in-out

    &[disabled]
        cursor: default