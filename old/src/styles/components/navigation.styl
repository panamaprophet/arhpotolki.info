.navigation
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%  
    background: $green
    z-index: 100
    overflow: hidden
    transition: all 250ms ease-in-out

.navigation__items
    display: flex
    flex-flow: column wrap
    justify-content: space-between
    align-items: center
    width: 100%
    height: 100%
    list-style: none

.navigation__item
    width: 100%
    height: 20%
    display: flex
    justify-content: center
    align-items: center

    color: #fff
    transition: all 250ms ease-in-out

    cursor: pointer

    &:not(:last-child)
        border-bottom: 1px solid #fff

    &:hover
        background: $orange

    &:active
        background: $blue

.navigation__link

    width: 100%
    height: 100%

    display: flex
    justify-content: center
    align-items: center

    font-size: 2.0em
    text-decoration: none
    color: inherit
    
.navigation__close-container
    height: 20%
    top: 0
    display: flex
    align-items: center
    position: absolute
    right: 25px

.navigation__close-button
    // top: 10%
    background: none
    border: none
    outline: none
    cursor: pointer
    color: #fff
    font-size: 4.20em

.navigation-trigger
    position: absolute
    top: 36px
    right: 32px
    text-transform: uppercase
    font-size: 1em
    font-weight: bold
    color: rgba(36, 132, 198, 0.8)
    cursor: pointer
    z-index: 100

    &:hover
        text-decoration: underline

.navigation__icon
    fill: $orange
